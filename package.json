{
	"name": "nativescript-gradient",
	"version": "1.0.0",
	"description": "NativeScript Gradient drawables for Android.",
	"main": "gradient.js",
	"nativescript": {
		"platforms": {
			"android": "2.0.0"
		},
		"scripts": {
			"build": "tsc",
			"demo.ios": "npm run preparedemo && cd demo && tns emulate ios",
			"demo.android": "npm run preparedemo && cd demo && tns run android",
			"preparedemo": "npm run build && cd demo && tns plugin remove nativescript-yourplugin && tns plugin add .. && tns install",
			"setup": "cd demo && npm install && cd .. && npm run build && cd demo && tns plugin add .. && cd .."
		},
		"repository": {
			"type": "git",
			"url": "https://github.com/bradmartin/nativescript-gradient.git"
		},
		"keywords": [
			"NativeScript",
			"JavaScript",
			"TypeScript",
			"bradmartin",
			"thorum",
			"gradient",
			"Android"
		],
		"author": {
			"name": "Brad Martin",
			"email": "bradwaynemartin@gmail.com"
		},
		"bugs": {
			"url": "https://github.com/bradmartin/nativescript-gradient/issues"
		},
		"license": {
			"type": "MIT",
			"url": "https://github.com/bradmartin/nativescript-gradient/blob/master/LICENSE"
		},
		"homepage": "https://github.com/bradmartin/nativescript-gradient",
		"readmeFilename": "README.md",
		"devDependencies": {
			"typescript": "^1.8.10"
		}
	}
}